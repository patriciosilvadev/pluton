<script>
var Raptor = function(){
    /**
    * Seta a classe para os campos editaveis e inicia o plugin
    */
    this.init = function(){
        //Adiciona a classe 'raptor-editable aos itens que podem ser editados pelo usu√°rio'
        $("#home, #about, #contact, .page-header, #navigation").addClass('raptor-editable');
        $("#blog-search, #side-widget, #footer").addClass('raptor-editable');
        $("top-navbar").css('margin-top', '150px !important');
        $('.raptor-editable').raptor({
            plugins: {
                save: {
                    plugin: 'saveRest'
                },
                saveRest: {
                    url: 'appearance/save',
                    data: function(html) {
                        return {
                            id: this.raptor.getElement().data('id'),
                            content: html
                        };
                    }
                },
                dock: {
                    docked: false
                }
            }
        });
    }
}

var editor = ('<?= $edit_appearance ?>');
if(editor){
    raptor = new Raptor;
    raptor.init();
}
</script>