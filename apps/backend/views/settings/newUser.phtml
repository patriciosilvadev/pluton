$("#deactive").click(function(){
    if("<?= $user['user_active'] ?>"){
        var text = 'Ao desativar o usuário o mesmo não podera mais acessar o sistema. Nenhuma informação será deletada.';
    } else{
        var text = 'Deseja realmente reativar o usuário?';
    }
    swal({
      title: "Tem certeza disso?",
      text: text,
      type: "warning",
